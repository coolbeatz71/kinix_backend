{
  "name": "kinix_backend",
  "version": "1.0.0",
  "description": "A RESTful API for a video container manager application",
  "repository": "https://github.com/coolbeatz71/kinix_backend.git",
  "author": "coolbeatz71 <sigmacool@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node build/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "yarn code:lint && tsc",
    "test": "jest --detectOpenHandles --runInBand --forceExit --coverage",
    "code:lint": "eslint --ext .js,.jsx,.ts,.tsx \"src/\"",
    "code:clean": "yarn code:lint --fix",
    "db:init:dev": "NODE_ENV=development npx sequelize db:create && NODE_ENV=development npx sequelize db:migrate",
    "db:seed:dev": "NODE_ENV=development npx sequelize db:seed:all",
    "db:drop:dev": "NODE_ENV=development npx sequelize db:drop",
    "db:dev": "yarn build && yarn db:drop:dev && yarn db:init:dev && yarn db:seed:dev",
    "db:init:test": "NODE_ENV=test npx sequelize db:create && NODE_ENV=test npx sequelize db:migrate",
    "db:seed:test": "NODE_ENV=test npx sequelize db:seed:all",
    "db:drop:test": "NODE_ENV=test npx sequelize db:drop",
    "db:test": "yarn build && yarn db:drop:test && yarn db:init:test && yarn db:seed:test"
  },
  "dependencies": {
    "@types/lodash": "^4.14.168",
    "babel-register": "^6.26.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "faker": "^5.5.2",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "http-status": "^1.5.0",
    "jest": "^26.6.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.0",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "node-gyp": "^7.1.2",
    "nodemon": "^2.0.7",
    "poetic": "^1.6.0",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0"
  }
}
